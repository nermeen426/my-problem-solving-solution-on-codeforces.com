#include <iostream>
 
using namespace std;
 
int main()
{
    int t,x,y,sum=0;
    cin >> t;
    for(int i=1 ; i<=t ;i++){
        cin >> x >> y;
        if(x>y){
            for(int j=y+1 ;j<x ; j++){
                if(j%2 != 0)
                    sum += j;
            }
            cout << sum << endl ;}
 
        else{
 
          for(int j=x+1 ; j<y ; j++)
            if(j%2 != 0)
              sum += j;
        cout << sum << endl ;
    }
    sum = 0 ;
 
    }
 
    return 0;
}
