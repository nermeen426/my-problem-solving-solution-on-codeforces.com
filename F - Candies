#include <iostream>
#include <cmath>
using namespace std;
 
int main() {
 
    long long a=1, b=1, c, x1, x2, d;
    cin >>  c;
    c*=-2;
    d = b*b - 4*a*c;
 
    if (d > 0) {
        x1 = (-b + sqrt(d)) / (2*a);
        x2 = (-b - sqrt(d)) / (2*a);
 
        if(x1>x2)
        cout<<(int)x1<<endl;
        else
        cout<<(int)x2<<endl;
    }
 
    else if (d == 0) {
        x1 = -b/(2*a);
        cout<<x1<<endl;
    }
    return 0;
}
